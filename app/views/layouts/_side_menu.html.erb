<% if user_signed_in? %>
	<h1>Registered Courses</h1>
	<% if current_user.approved_courses.empty? %>
		You have no approved registrations yet.
	<% end %>
	<ul class="registered-courses-menu">
		<% current_user.approved_courses.each do |course| %>
			<li><%= link_to course.name, course %></li>
		<% end %>
	</ul>
	
	<% if teacher? %>
		<h1>Courses You're Teaching</h1>
		<ul class="registered-courses-menu">
			<% current_user.taught_courses.each do |course| %>
				<li><%= link_to course.name, course %></li>
			<% end %>
		</ul>
	<% end %>
<% end %>