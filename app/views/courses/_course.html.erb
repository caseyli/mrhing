<li>
<%= course.name %>
<% if current_user.is_registered_for(course) %>
	registered
<% else %>
	<%= link_to 'register', controller: :courses, action: :register_current_user, id: course %>
<% end %>

<% if admin? %>
<%= link_to 'Show', course %>
<%= link_to 'Edit', edit_course_path(course) %>
<%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</li>